<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.islandarkproject.ConfirmPassword">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rounded"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/enter_password"
        android:id="@+id/textView17"
        android:layout_above="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/confirm_password"
        android:id="@+id/textView18"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@color/DimGray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:background="@color/Black"
        android:layout_below="@+id/editText4"
        android:id="@+id/linearLayout6">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@drawable/button_blue_rounded"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:id="@+id/btnCancel_confirmPassword"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@drawable/button_green_rounded"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:id="@+id/btnSubmit_confirmPassword"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/islandarkprojectlogo"
        android:id="@+id/imageView15"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/linearLayout6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_account_box"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:drawablePadding="10dip"
        android:paddingLeft="10dip"
        android:background="@color/Blue"
        android:textColor="@color/White"
        android:gravity="center_vertical"
        android:id="@+id/textView19"
        android:layout_marginLeft="2.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
