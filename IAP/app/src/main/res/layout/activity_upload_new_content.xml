<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.islandarkproject.UploadNewContent"
    android:background="@color/Black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/relativeLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawableLeft="@drawable/ic_account_box"
            android:text="@string/user_name"
            android:drawablePadding="10dip"
            android:paddingLeft="10dip"
            android:background="@color/Blue"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:id="@+id/textView12"
            android:layout_marginLeft="2.5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnLogout_uploadNewContent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/btn_logout"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@drawable/button_red_rounded"
            android:id="@+id/btnLogout_uploadNewContent"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/linear2ButtonLayout"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/btnLogout_uploadNewContent"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:drawableLeft="@drawable/ic_settings_white_18dp"
                android:text="@string/btn_change_settings"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:background="@drawable/button_blue_rounded"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:id="@+id/btnChangeUserSettings_uploadNewContent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_below="@+id/btnLogout_uploadNewContent"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:drawableLeft="@drawable/ic_view_headline"
                android:text="@string/btn_view_uploaded_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:background="@drawable/button_blue_rounded"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:id="@+id/btnViewUploadedContent_uploadNewContent"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/btnChangeUserSettings_uploadNewContent"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/ic_home"
            android:text="@string/btn_home"
            android:textAllCaps="false"
            android:drawablePadding="2dip"
            android:paddingLeft="110dip"
            android:paddingRight="100dip"
            android:textColor="@color/White"
            android:background="@drawable/button_blue_rounded"
            android:id="@+id/btnHome_uploadNewContent"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_below="@+id/linear2ButtonLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentStart="true"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/upload_content"
            android:textColor="@color/White"
            android:id="@+id/textView13"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/LightSlateGray"
            android:gravity="center" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView13">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton2" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton3" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton4" />
           </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton5" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_photo"
                android:adjustViewBounds="true"
                android:layout_weight="0.25"
                android:id="@+id/imageButton6" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView14"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/LightSlateGray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/imageView14"
            android:layout_below="@+id/textView14"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
